<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LeftDrawer">
        <item name="simpleItemSelectedColor">@color/background_light</item>
        <item name="itemTextColor">@color/drawer_item</item>
        <item name="itemIconTint">@color/drawer_item</item>
    </style>
    <style name="StyledButton" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">true</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="elevation">4dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>
    <style name="PrimaryButton" parent="@style/StyledButton">
        <item name="android:backgroundTint">@color/color_primary</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="SecondaryButton" parent="@style/StyledButton">
        <item name="android:backgroundTint">@color/color_secondary</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="BaseTextView">
        <item name="android:textColor">@color/text_on_front</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="BaseFrontBox">
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/layout_rounded</item>
        <item name="android:elevation">4dp</item>
        <item name="android:padding">16dp</item>
    </style>
</resources>