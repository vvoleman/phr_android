<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="992px"
    android:layout_height="1403px"
    app:justifyContent="space_between"
    android:gravity=""
    app:flexDirection="column"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_header"
        android:layout_width="992px"
        android:layout_height="935.5px"
        android:background="@color/beige_700"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/text_view_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFeatureSettings="smcp"
            android:text="Export plánovaných léků"
            android:textColor="@color/white"
            android:textSize="48px" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view_header_start_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13.06.2023"
                android:textColor="@color/green_200" />

            <TextView
                android:id="@+id/text_view_header_delimiter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8px"
                android:layout_marginEnd="8px"
                android:text="—"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/text_view_header_end_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13.11.2023"
                android:textColor="@color/green_200" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_footer"
        android:layout_width="992px"
        android:layout_height="467.6px"
        android:background="@color/beige_500"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/text_view_patient_name"
            android:layout_width="wrap_content"
            android:text="Jan Novák"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/text_view_patient_birthdate"
            android:layout_width="wrap_content"
            android:text="01.01.2021"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />
    </LinearLayout>

</com.google.android.flexbox.FlexboxLayout>
