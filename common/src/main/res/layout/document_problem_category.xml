<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="595px"
    android:layout_height="842px"
    android:padding="7dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="608px"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/text_view_header_label"
            android:layout_width="wrap_content"
            android:text="Výpis z kategorie"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/text_view_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:fontFeatureSettings="smcp"
            android:text="Zlomenná ruka"
            android:textColor="@color/beige_700"
            android:textSize="48px" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view_header_start_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13.06.2023"
                android:textStyle="bold"
                android:textColor="@color/green_700" />

            <TextView
                android:id="@+id/text_view_header_delimiter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8px"
                android:layout_marginEnd="8px"
                android:text="—"
                android:textStyle="bold"
                android:textColor="@color/green_700" />

            <TextView
                android:id="@+id/text_view_header_end_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13.11.2023"
                android:textStyle="bold"
                android:textColor="@color/green_700"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_footer"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:background="@color/gray_500"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/layout_header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/text_view_patient_name"
            android:layout_width="wrap_content"
            android:text="Jan Novák"
            android:textColor="@color/beige_700"
            android:textStyle="bold"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/text_view_patient_birthdate"
            android:layout_width="wrap_content"
            android:text="01.01.2021"
            android:textColor="@color/beige_700"
            android:layout_height="wrap_content" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
