<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/text_view_select_fields"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/button_add_field"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFeatureSettings="smcp"
        android:text="Vyberte pole měření" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_add_field"
        style="@style/SecondaryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Přidat pole"
        android:textAlignment="center" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/button_add_field"
        app:layout_constraintStart_toStartOf="parent"
        tools:listitem="@layout/item_field_edit"
        tools:itemCount="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_view_no_field"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/button_add_field"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Nemáte vyprané žádné pole"
        android:textSize="16sp"
        android:padding="16dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:visibility="gone"
        android:textColor="@color/beige_200"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content" />


</androidx.constraintlayout.widget.ConstraintLayout>
