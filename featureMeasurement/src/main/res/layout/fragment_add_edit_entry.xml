<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cz.vvoleman.phr.featureMeasurement.ui.view.addEdit.AddEditMeasurementFragment">

    <com.google.android.flexbox.FlexboxLayout
        style="@style/BaseFrontBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <cz.vvoleman.phr.common.ui.component.picker.DatePicker
            android:id="@+id/date_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:hint="@string/field_entry_date"
            app:layout_flexBasisPercent="50%" />

        <cz.vvoleman.phr.common.ui.component.picker.TimePicker
            android:id="@+id/time_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"

            app:hint="@string/field_entry_time"
            app:layout_flexBasisPercent="50%" />
    </com.google.android.flexbox.FlexboxLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="10dp"
        android:backgroundTint="@color/beige_200" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/BaseFrontBox"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/green_500"
            android:clickable="true"
            android:contentDescription="@string/save_measurement_entry"
            android:elevation="4dp"
            android:focusable="true"
            android:padding="8dp"
            android:text="@string/action_save"
            android:textColor="@color/white"
            app:icon="@drawable/ic_add"
            app:iconGravity="textStart"
            app:iconTint="@color/white" />
    </LinearLayout>
</LinearLayout>
